<div class='p-4 row'>
  <div class='card col-12 col-md-8'>
    <div class='card-header row'>
      <h3>Got something to post? Post it here!</h3>
    </div>
    <div class='card-body'>
      <form id='add-form'>
        <label for='title'>Title:</label>
        <textarea id='title' rows='1' class='form-input'></textarea>
        <label for='post_content'>Content:</label>
        <textarea id='post_content' rows='3' class='form-input'></textarea>
        <input type='submit' class='w-100'>
      </form>
    </div>
  </div>

  {{!-- Loads a card for each post in the database --}}
  <div class='col-12 col-md-4'>
    <h3>Personal Posts:</h3>
    <ul>
      {{#if posts.length}}
      {{#each posts as |post|}}
      <li><a href='/dashboard/post/{{this.id}}' class='personal-posts'>{{this.title}}</a></li>
      {{/each}}
      {{else}}
      <li><a href='#' class='personal-posts'>No personal posts available</a></li>
      {{/if}}
    </ul>
  </div>
</div>

<script src='/js/addPost.js'></script>
